<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andy.andy_collections.MainActivity">

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="39dp"
        android:id="@+id/name_label" />

    <TextView
        android:text="Location: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_label"
        android:layout_alignStart="@+id/name_label"
        android:layout_marginTop="34dp"
        android:id="@+id/location_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name_field_text"
        android:layout_alignBaseline="@+id/name_label"
        android:layout_alignBottom="@+id/name_label"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp" />

    <Button
        android:text="View All"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:id="@+id/view_all_btn"
        android:layout_below="@+id/location_field_text"
        android:layout_toEndOf="@+id/name_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/location_field_text"
        android:layout_alignBaseline="@+id/location_label"
        android:layout_alignBottom="@+id/location_label"
        android:layout_alignStart="@+id/name_field_text" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_all_btn"
        android:layout_alignStart="@+id/view_all_btn"
        android:layout_marginTop="49dp"
        android:id="@+id/delete_btn" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_btn"
        android:layout_alignBaseline="@+id/delete_btn"
        android:layout_alignBottom="@+id/delete_btn"
        android:layout_alignStart="@+id/submit_btn" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_btn"
        android:layout_marginEnd="32dp"
        android:layout_alignBaseline="@+id/view_all_btn"
        android:layout_alignBottom="@+id/view_all_btn"
        android:layout_alignEnd="@+id/location_field_text" />

</RelativeLayout>
